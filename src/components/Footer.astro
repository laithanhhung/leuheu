---
import { Mail, Phone } from "lucide-astro";
import { getEntry } from "astro:content";

const footer = await getEntry("sections", "footer");
const { data } = footer!;
---

<footer class="text-white py-16 px-4 md:px-8 border-t border-gray-900">
    <div
        class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-end gap-12"
    >
        <div>
            <h2
                class="text-5xl md:text-7xl font-black mb-8 flex items-end gap-2"
            >
                {data.title}<span class="text-neon-lime text-2xl mb-4">‚óè</span>
            </h2>

            <div class="space-y-4">
                {
                    data.contacts?.map((contact) => (
                        <div class="flex items-center gap-4 text-lg md:text-xl text-gray-400 hover:text-white transition-colors">
                            {contact.icon === "Mail" && (
                                <Mail class="text-neon-lime" />
                            )}
                            {contact.icon === "Phone" && (
                                <Phone class="text-neon-lime" />
                            )}
                            <span>{contact.value}</span>
                        </div>
                    ))
                }
            </div>
        </div>

        <div class="text-right">
            <p class="text-gray-500 text-sm">
                {data.extraData?.copyright}
            </p>
        </div>
    </div>
</footer>
