---
import { getEntry } from "astro:content";

const statsEntry = await getEntry("sections", "stats");
const { data } = statsEntry!;

const creators = Array(12)
    .fill(0)
    .map((_, i) => ({
        id: i,
        img: `https://picsum.photos/100/100?random=${300 + i}`,
        name: `Creator ${i + 1}`,
        followers: `${(Math.random() * 5).toFixed(1)}M`,
    }));
---

<section
    class="text-white py-12 xs:py-16 3xl:py-24 px-4 md:px-8 3xl:px-16 relative"
>
    <div class="max-w-6xl 3xl:max-w-8xl mx-auto">
        <h2
            class="text-3xl xs:text-4xl md:text-6xl 3xl:text-8xl font-black mb-8 xs:mb-12 3xl:mb-20 uppercase"
        >
            {data.title}
            <span class="text-neon-lime">{data.subtitle}</span>
        </h2>

        <div
            class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 3xl:grid-cols-8 gap-3 xs:gap-4 3xl:gap-8 mb-12 xs:mb-16 3xl:mb-24"
        >
            {
                creators.map((c) => (
                    <div class="bg-card-gray rounded-xl 3xl:rounded-2xl p-3 xs:p-4 3xl:p-6 flex flex-col items-center text-center hover:bg-white hover:text-black transition-colors duration-300 cursor-pointer group">
                        <img
                            src={c.img}
                            alt={c.name}
                            class="w-14 h-14 xs:w-16 xs:h-16 3xl:w-24 3xl:h-24 rounded-full mb-3 3xl:mb-6 border-2 border-neon-lime group-hover:border-black"
                        />
                        <p class="font-bold text-xs xs:text-sm 3xl:text-xl truncate w-full">
                            {c.name}
                        </p>
                        <p class="text-[0.6rem] xs:text-xs 3xl:text-base text-gray-400 group-hover:text-gray-600">
                            {c.followers} followers
                        </p>
                    </div>
                ))
            }
        </div>

        <div
            class="flex flex-col md:flex-row gap-6 xs:gap-8 3xl:gap-16 items-center"
        >
            <div
                class="bg-card-gray rounded-[1.5rem] xs:rounded-[2rem] 3xl:rounded-[3rem] p-6 xs:p-8 3xl:p-12 flex-1 w-full flex items-center justify-between border border-gray-800"
            >
                <div>
                    {
                        data.stats?.map((stat) => (
                            <>
                                <p class="text-neon-lime text-base xs:text-lg 3xl:text-2xl font-bold">
                                    {stat.label}
                                </p>
                                <p class="text-3xl xs:text-4xl md:text-5xl 3xl:text-7xl font-black">
                                    {stat.value}{" "}
                                    <span class="text-white text-lg xs:text-2xl 3xl:text-4xl font-normal">
                                        followers
                                    </span>
                                </p>
                            </>
                        ))
                    }
                </div>
                <div class="text-neon-lime text-5xl xs:text-6xl 3xl:text-8xl">
                    âœ¦
                </div>
            </div>

            <div
                class="bg-neon-lime text-black rounded-[1.5rem] xs:rounded-[2rem] 3xl:rounded-[3rem] p-6 xs:p-8 3xl:p-12 flex-1 w-full flex items-center justify-center text-center"
            >
                <div>
                    <p
                        class="text-4xl xs:text-5xl md:text-7xl 3xl:text-9xl font-black"
                    >
                        {data.extraData?.stat2Value}<span
                            class="text-xl xs:text-2xl 3xl:text-4xl align-top text-black/50"
                            >+</span
                        >
                    </p>
                    <p class="font-bold text-base xs:text-lg 3xl:text-3xl">
                        {data.extraData?.stat2Label}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
