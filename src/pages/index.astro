---
import { getCollection } from "astro:content";
import Hero from "../components/Hero.astro";
import Marquee from "../components/Marquee.astro";
import About from "../components/About.astro";
import Stats from "../components/Stats.astro";
import Services from "../components/Services.astro";
import CampaignCard from "../components/CampaignCard.astro";
import Partners from "../components/Partners.astro";
import Footer from "../components/Footer.astro";
import { Star } from "lucide-astro";

const campaigns = await getCollection("campaigns");
const sortedCampaigns = campaigns.sort(
    (a, b) => (a.data.order || 0) - (b.data.order || 0),
);
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Leu Heu</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800;900&display=swap"
            rel="stylesheet"
        />
        <style is:global>
            body {
                background-color: #000000;
            }
            .hide-scrollbar::-webkit-scrollbar {
                display: none;
            }
            .hide-scrollbar {
                -ms-overflow-style: none;
                scrollbar-width: none;
            }
            /* Ensure selection color matches original design */
            ::selection {
                background-color: #ccff00;
                color: #000000;
            }
        </style>
    </head>
    <body class="font-sans overflow-x-hidden">
        <div class="spotlight relative min-h-screen">
            <Hero />

            <div class="text-neon-lime border-y-2 border-neon-lime/20">
                <Marquee
                    text="ChiuChiuEntertainment #leuheu "
                    className="bg-black text-neon-lime"
                />
            </div>

            <About />
            <Stats />

            <div class="bg-neon-lime text-black transform -skew-y-1 my-8 py-2">
                <Marquee
                    text="services + services + services +"
                    className="font-black"
                    reverse
                />
            </div>

            <Services />

            {/* Campaigns Header Section */}
            <section class="py-16 px-4 md:px-8">
                <div
                    class="flex items-center justify-center gap-4 text-neon-lime mb-12 overflow-hidden"
                >
                    {
                        Array(10)
                            .fill(0)
                            .map(() => <Star fill="#ccff00" size={24} />)
                    }
                </div>

                <div
                    class="max-w-4xl mx-auto bg-white rounded-[2rem] p-8 md:p-12 flex flex-col md:flex-row items-center gap-8 mb-20"
                >
                    <div class="flex-1">
                        <h2
                            class="text-4xl md:text-6xl font-black text-black uppercase leading-none"
                        >
                            Significant <br />
                            <span
                                class="text-transparent bg-clip-text bg-gradient-to-r from-black to-gray-600"
                                >Campaigns</span
                            >
                        </h2>
                        <p class="mt-4 text-gray-600 font-medium">
                            #leuheu with partners
                        </p>
                    </div>
                    <div class="flex-1 grid grid-cols-2 gap-2">
                        <img
                            src="https://picsum.photos/200/300?random=500"
                            class="rounded-lg w-full h-auto object-cover"
                            alt="Campaign collage"
                        />
                        <img
                            src="https://picsum.photos/200/300?random=501"
                            class="rounded-lg w-full h-auto object-cover mt-8"
                            alt="Campaign collage"
                        />
                    </div>
                </div>

                {/* Campaign Cards Loop */}
                <div class="max-w-6xl mx-auto">
                    {
                        sortedCampaigns.map((campaign) => (
                            <CampaignCard campaign={campaign.data} />
                        ))
                    }
                </div>
            </section>

            <div
                class="absolute top-[25svh] left-1/2 -translate-x-1/2 w-[100%] h-full -z-10 pointer-events-none"
            >
                <svg
                    class="w-full h-auto"
                    width="1246"
                    height="5283"
                    viewBox="0 0 1246 5283"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        id="stroke-path"
                        d="M394.04 75.0195C394.04 75.0195 10.04 189.02 154.54 510.025C299.039 831.03 1013.54 737.02 1159.54 1289.02C1305.54 1841.02 -11.7976 2735.02 79.5401 1977.52C170.878 1220.02 1236.04 2057.02 1116.54 2584.02C997.04 3111.01 250.04 3006.51 187.04 3471.02C124.04 3935.53 685.04 3745.52 965.04 4233.52C1245.04 4721.52 732.54 5207.52 732.54 5207.52"
                        stroke="#D5FF3F"
                        stroke-width="150"
                        stroke-linecap="round"></path>
                </svg>
            </div>

            <Partners />
            <Footer />
        </div>

        <script>
            import { gsap } from "gsap";
            import { ScrollTrigger } from "gsap/ScrollTrigger";
            import Lenis from "lenis";

            gsap.registerPlugin(ScrollTrigger);

            // Initialize Lenis
            const lenis = new Lenis();

            lenis.on("scroll", ScrollTrigger.update);

            gsap.ticker.add((time) => {
                lenis.raf(time * 1000);
            });

            gsap.ticker.lagSmoothing(0);

            // SVG Path Animation
            const path = document.getElementById("stroke-path");
            if (path) {
                const length = (path as any).getTotalLength();

                // Set up the starting positions
                (path as any).style.strokeDasharray = length + " " + length;
                (path as any).style.strokeDashoffset = String(length);

                // Trigger the animation on scrub
                gsap.to(path, {
                    strokeDashoffset: 0,
                    ease: "none",
                    scrollTrigger: {
                        trigger: ".spotlight",
                        start: "top top",
                        end: "bottom bottom",
                        scrub: true,
                    },
                });
            }
        </script>
    </body>
</html>
